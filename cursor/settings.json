{
  // --- EDITOR UI & UX ---
  "editor.fontFamily": "JetBrainsMono Nerd Font, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontLigatures": true,
  "editor.minimap.enabled": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.stickyScroll.enabled": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.wordWrap": "on",
  "editor.linkedEditing": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.tabSize": 2,
  "editor.smoothScrolling": true,
  "editor.inlineSuggest.enabled": true,
  "breadcrumbs.enabled": true,
  "window.commandCenter": true,
  "workbench.colorTheme": "Dracula Theme",
  "workbench.editor.enablePreview": false,

  // --- EXPLORADOR ---
  "explorer.sortOrder": "type",

  // --- BÚSQUEDA ---
  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true,
    "**/build": true,
    "**/.svelte-kit": true,
    "**/coverage": true,
    "package-lock.json": true,
    "pnpm-lock.yaml": true
  },

  // --- COMPORTAMIENTO DE ARCHIVOS ---
  "files.autoSave": "onFocusChange",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.openRepositoryInParentFolders": "always",

  // --- FORMATEO Y REGLAS DE GUARDADO ---
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit",
    "source.organizeImports": "explicit"
  },

  // --- CONFIGURACIÓN DE LENGUAJES (Svelte 5, TS, JS) ---
  "svelte.enable-ts-plugin": true,
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "typescript.updateImportsOnFileMove.enabled": "always",

  // Inlay Hints: Ideales para ver tipos en Drizzle y Runes de Svelte
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,

  // --- OVERRIDES POR LENGUAJE ---
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  // --- CURSOR AI ---
  "cursor.composer.shouldChimeAfterChatFinishes": true,
  "cursor.cpp.enablePartialAccepts": true,
  "cursor.chat.showSuggestedFiles": true,

  "typescript.preferences.importModuleSpecifier": "non-relative", // Prefiere 'src/lib/...' sobre '../../../lib/...'
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "typescript.preferences.preferTypeOnlyGlobs": true, // Útil para Svelte 5 al importar tipos

  // --- TAILWIND CSS ---
  "tailwindCSS.emmetCompletions": true,
  "files.associations": {
    "*.css": "tailwindcss"
  },

  // --- TERMINAL ---
  "terminal.integrated.fontFamily": "MesloLGM Nerd Font, JetBrainsMono Nerd Font, monospace",
  "terminal.integrated.fontSize": 13,
  "terminal.integrated.fontWeight": "normal",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.enableImages": true,
  "workbench.iconTheme": "material-icon-theme"
}
